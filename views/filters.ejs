<style>
   .toggle input {
      height: 0;
      width: 0;
      visibility: hidden;
   }

   .toggle label {
      height: 25px;
      width: 50px;
      background-color: rgb(157, 157, 157);
      border-radius: 25px;
      cursor: pointer;
      display: block;
      position: relative;
   }

   .toggle label:after {
      height: 20px;
      width: 20px;
      background-color: #fff;
      border-radius: 20px;
      content:'';
      position: absolute;
      transition: .3s;
   }

   .toggle input:checked + label {
      background-color: rgb(117, 255, 165);
   }

   .toggle input:checked + label:after {
      transform: translateX(100%);
   }
</style>
<main>
   <h1>User Settings</h1>

   <form id="filterForm" action="">
      <div class="toggle"> Include private schools
         <input type="checkbox" id="privateSchool" name="filters" checked/>
         <label for="privateSchool"></label>
      </div>

      <div class="toggle">Include schools with a religious affiliation
         <input type="checkbox" id="religious" name="filters" checked/>
         <label for="religious"></label>
      </div>

      <div class="toggle">Only show elite schools
         <input type="checkbox" id="elite" name="filters"/>
         <label for="elite"></label>
      </div>

      <br><input type="submit" name="apply" value="Apply Settings" />
   </form>

   <div id="topSchools"><br>Elite Schools: <br></div>

</main>